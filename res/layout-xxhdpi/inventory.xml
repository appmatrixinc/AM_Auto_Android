<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/header" />
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/imageView" android:layout_gravity="center_horizontal"
            android:background="@drawable/header_vehicles_inventory"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:background="#DD000000" android:baselineAligned="false"
            android:measureWithLargestChild="false">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="NEW"
                android:id="@+id/new_inventory" android:textSize="12sp" android:layout_marginLeft="48dp"
                android:background="@drawable/blue_button" android:textColor="#FFFFFF"
                android:layout_marginTop="6dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="USED"
                android:id="@+id/used_inventory" android:textSize="12sp" android:layout_marginLeft="40dp"
                android:background="@drawable/blue_button" android:textColor="#FFFFFF"
                android:layout_marginTop="6dp"/>
        <Button
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:text="CERT.\nPRE-OWNED"
                android:id="@+id/cpo_inventory" android:textSize="11sp" android:layout_marginLeft="40dp"
                android:background="@drawable/blue_button" android:textColor="#FFFFFF"
                android:layout_marginTop="6dp"/>
    </LinearLayout>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView2" android:layout_gravity="center_horizontal"
            android:src="@drawable/sample_inventory" android:scaleType="centerCrop"/>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/inventory_web_view" android:layout_gravity="center_horizontal"/>

</LinearLayout>