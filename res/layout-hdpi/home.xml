<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/header_bg1">

    <include layout="@layout/header" />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:id="@+id/imageView2" android:layout_gravity="center_horizontal"
            android:src="@drawable/dashboard_main_image" android:background="#000000" android:scaleType="fitXY"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp" android:background="@drawable/dashboard_nav_bg">
        <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/contact_button" android:src="@drawable/icon_contact"
                android:background="@android:color/transparent" android:layout_gravity="center_vertical"
                android:scaleType="fitCenter" android:layout_marginLeft="15dp" android:clickable="true"/>
        <ImageButton
                android:layout_width="73dp"
                android:layout_height="70dp"
                android:id="@+id/inventory_button" android:src="@drawable/icon_inventory" android:scaleType="fitCenter"
                android:layout_gravity="center_vertical" android:background="@android:color/transparent"
                android:layout_marginLeft="15dp" android:clickable="true"/>
        <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/service_button" android:src="@drawable/icon_request_service"
                android:background="@android:color/transparent" android:layout_gravity="center_vertical"
                android:scaleType="fitCenter" android:layout_marginLeft="15dp" android:clickable="true"/>
        <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/mytools_button" android:src="@drawable/icon_my_tools"
                android:layout_gravity="center_vertical" android:background="@android:color/transparent"
                android:scaleType="fitCenter" android:layout_marginLeft="15dp" android:clickable="true"/>
    </LinearLayout>
    <ImageView
            android:layout_width="170dp"
            android:layout_height="115dp"
            android:id="@+id/imageView3" android:layout_gravity="center_horizontal" android:layout_marginTop="12dp"
            android:background="#000000" android:src="@drawable/play_video_ios" android:scaleType="fitXY"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Special Mobile Only Offers"
            android:id="@+id/textView" android:layout_marginLeft="15dp" android:layout_marginTop="15dp"
            android:textSize="12sp" android:textColor="#FFFFFF"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/imageView4" android:layout_gravity="center_horizontal|bottom|left|right" android:layout_marginTop="5dp"
            android:scaleType="fitCenter" android:baselineAlignBottom="true" android:background="@drawable/banner_1"/>
</LinearLayout>